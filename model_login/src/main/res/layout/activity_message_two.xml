<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageOneActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="完善信息"
        android:textSize="16sp"
        android:textColor="@color/blue"
        android:layout_marginTop="74dp"
        android:id="@+id/wan"
        android:layout_marginLeft="30dp">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="审核通过即可成功入驻"
        android:layout_below="@id/wan"
        android:textSize="16sp"
        android:textColor="@color/blue"
        android:layout_marginLeft="30dp"
        android:id="@+id/shen">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入邮箱账号"
        android:textSize="14sp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/shen"
        android:layout_marginTop="30dp"
        android:id="@+id/real">
    </TextView>

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/real"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/email"
        android:textSize="14sp"
        android:background="@drawable/etback">
    </EditText>
    <Button
        android:layout_width="104dp"
        android:layout_height="40dp"
        android:background="@drawable/backkback"
        android:layout_alignRight="@id/email"
        android:layout_below="@id/real"
        android:layout_marginTop="10dp"
        android:text="获取验证码"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:id="@+id/bu">
    </Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入验证码"
        android:textSize="14sp"
        android:layout_below="@id/email"
        android:id="@+id/hos"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp">
    </TextView>
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/hos"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/yanzheng"
        android:textSize="14sp"
        android:background="@drawable/etback">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入密码"
        android:textSize="14sp"
        android:layout_below="@id/yanzheng"
        android:id="@+id/ke"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp">
    </TextView>
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ke"
        android:id="@+id/pass"
        android:textSize="14sp"
        android:password="true"
        android:background="@drawable/etback">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请再次输入密码"
        android:textSize="14sp"
        android:layout_below="@id/pass"
        android:id="@+id/zhi"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp">
    </TextView>
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/zhi"
        android:id="@+id/password"
        android:textSize="14sp"
        android:password="true"
        android:background="@drawable/etback">
    </EditText>

    <Button
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:text="@string/next"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/password"
        android:layout_marginTop="50dp"
        android:id="@+id/next"
        android:textColor="@android:color/white"
        android:background="@drawable/buttonback">
    </Button>

</RelativeLayout>