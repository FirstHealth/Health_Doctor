<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Sick_MessageActivity">

    <ImageView
        android:layout_width="18dp"
        android:layout_height="16dp"
        android:src="@mipmap/common_icon_back_black_n"
        android:id="@+id/jian"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="20dp">
    </ImageView>
    <TextView
        android:layout_width="360dp"
        android:layout_height="20dp"
        android:text="集训：面神经闫的治疗方法"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        android:id="@+id/name">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="张三"
        android:textSize="16sp"
        android:textColor="@color/blue"
        android:layout_marginTop="86dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/people">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[病症]"
        android:textSize="14sp"
        android:textColor="@color/blue"
        android:layout_below="@id/people"
        android:layout_marginTop="20dp"
        android:id="@+id/bz"
        android:layout_marginLeft="20dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="面部神经"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_below="@id/bz"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/bingzheng">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[科室]"
        android:textSize="14sp"
        android:textColor="@color/blue"
        android:layout_below="@id/bingzheng"
        android:layout_marginTop="20dp"
        android:id="@+id/ks"
        android:layout_marginLeft="20dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内科"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_below="@id/ks"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/keshi">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[病症详情]"
        android:textSize="14sp"
        android:textColor="@color/blue"
        android:layout_below="@id/keshi"
        android:layout_marginTop="20dp"
        android:id="@+id/bingmess"
        android:layout_marginLeft="20dp">
    </TextView>

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="xzczxczxczxc"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_below="@id/bingmess"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/message">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[治疗经历]"
        android:textSize="14sp"
        android:textColor="@color/blue"
        android:layout_below="@id/message"
        android:layout_marginTop="20dp"
        android:id="@+id/zhi"
        android:layout_marginLeft="20dp">
    </TextView>

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="xzczxczxczxc"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_below="@id/zhi"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/zhiliao">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[相关图片]"
        android:textSize="14sp"
        android:textColor="@color/blue"
        android:layout_below="@id/zhiliao"
        android:layout_marginTop="20dp"
        android:id="@+id/ima"
        android:layout_marginLeft="20dp">
    </TextView>

    <ImageView
        android:layout_width="320dp"
        android:layout_height="144dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_below="@id/ima"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:scaleType="centerCrop"
        android:id="@+id/iv">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的解答"
        android:textSize="14sp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_below="@id/iv"
        android:layout_marginTop="20dp"
        android:id="@+id/jie"
        android:layout_marginLeft="20dp">
    </TextView>

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="xzczxczxczxc"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_below="@id/jie"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/jieda">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/ll"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="0000"
            android:id="@+id/bu"
            android:textSize="14sp"
            android:background="@android:color/white"
            android:textColor="@color/red">
        </Button>
        <Button
            android:layout_width="104dp"
            android:layout_height="40dp"
            android:text="我来解决"
            android:id="@+id/buy"
            android:textColor="@android:color/white"
            android:background="@color/blue">
        </Button>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_mengceng"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="360dp"
            android:layout_marginLeft="180dp"
            android:textColor="@android:color/white"
            android:id="@+id/tv6"
            android:text="@string/Detatils_tv7"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="160dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="5dp"
            android:text="@string/Detatils_tv8"
            android:layout_below="@id/tv6"
            android:id="@+id/tv7"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/know"
            android:layout_width="80dp"
            android:layout_marginLeft="200dp"
            android:layout_height="110dp"
            android:src="@mipmap/know"
            android:layout_below="@id/tv7"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_below="@id/tv7"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="110dp"
            android:src="@mipmap/xian"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="80dp"
            android:layout_height="50dp"
            android:src="@mipmap/quan"/>
    </RelativeLayout>
</RelativeLayout>