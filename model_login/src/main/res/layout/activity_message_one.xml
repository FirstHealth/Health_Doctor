<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageOneActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="完善信息"
        android:textSize="16sp"
        android:textColor="@color/blue"
        android:layout_marginTop="74dp"
        android:id="@+id/wan"
        android:layout_marginLeft="30dp">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="审核通过即可成功入驻"
        android:layout_below="@id/wan"
        android:textSize="16sp"
        android:textColor="@color/blue"
        android:layout_marginLeft="30dp"
        android:id="@+id/shen">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*填写正确信息有助于快速通过审核."
        android:textSize="10sp"
        android:textColor="@color/red"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/shen"
        android:id="@+id/red">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的真实姓名"
        android:textSize="14sp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/red"
        android:layout_marginTop="30dp"
        android:id="@+id/real">
    </TextView>
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/real"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/name"
        android:textSize="14sp"
        android:background="@drawable/etback">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您所在医院"
        android:textSize="14sp"
        android:layout_below="@id/name"
        android:id="@+id/hos"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp">
    </TextView>
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/hos"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/yiyuan"
        android:textSize="14sp"
        android:background="@drawable/etback">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您所在科室"
        android:textSize="14sp"
        android:layout_below="@id/yiyuan"
        android:id="@+id/ke"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp">
    </TextView>
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ke"
        android:id="@+id/keshi"
        android:textSize="14sp"
        android:background="@drawable/etback">
    </EditText>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sp1"
        android:layout_alignRight="@id/keshi"
        android:layout_below="@id/ke">
    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的职称"
        android:textSize="14sp"
        android:layout_below="@id/keshi"
        android:id="@+id/zhi"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp">
    </TextView>
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/zhi"
        android:id="@+id/zhicheng"
        android:textSize="14sp"
        android:background="@drawable/etback">
    </EditText>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sp2"
        android:layout_alignRight="@id/keshi"
        android:layout_below="@id/zhi">
    </Spinner>
    <Button
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:text="@string/next"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/zhicheng"
        android:layout_marginTop="50dp"
        android:id="@+id/next"
        android:textColor="@android:color/white"
        android:background="@drawable/buttonback">
    </Button>

</RelativeLayout>