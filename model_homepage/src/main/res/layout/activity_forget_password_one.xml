<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/forget_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ForgetPasswordActivityOne">
      <ImageView
          android:layout_width="16dp"
          android:layout_height="16dp"
          android:id="@+id/back"
          android:src="@mipmap/back_white"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ForgetOne_tv1"
        android:textSize="14sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>
    
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:background="#fff"
        android:layout_height="124dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/et_email"
            android:textSize="14sp"
            android:layout_marginTop="30dp"
            android:textColor="#999999"
            android:hint="@string/ForgetOne_tv2"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:layout_marginRight="30dp"/>
        <Button
            android:layout_width="58dp"
            android:layout_height="20dp"
            android:text="@string/ForgetOne_tv3"
            android:id="@+id/bt_getcode"
            android:textSize="10sp"
            android:textColor="#fff"
            android:layout_marginTop="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/login_bt"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/v1"
            android:layout_below="@id/et_email"
            android:layout_marginTop="10dp"
            android:background="#f2f2f2"></View>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/et_code"
            android:layout_below="@id/v1"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:textColor="#999999"
            android:hint="@string/ForgetOne_tv4"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:layout_marginRight="30dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@id/et_code"
            android:layout_marginTop="10dp"
            android:background="#f2f2f2"></View>
    </RelativeLayout>
    <Button
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:id="@+id/next"
        android:text="@string/ForgetOne_tv5"
        android:layout_centerHorizontal="true"
        android:textColor="#3087ea"
        android:background="@drawable/forget_bt"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        />
</RelativeLayout>