<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BindIdCardActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="100dp"
        android:id="@+id/r1"
        android:background="@mipmap/bank_card_n"
        android:layout_height="160dp">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@mipmap/cemera"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@+id/iv_cemera"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击拍摄/上传身份证正面"
            android:textColor="#3087ea"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_cemera"
            android:id="@+id/tv"
            android:layout_marginTop="20dp"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="100dp"
        android:scaleType="centerCrop"
        android:id="@+id/iv"
        android:visibility="gone"
        android:background="@mipmap/bank_card_n"
        android:layout_height="160dp">
    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="100dp"
        android:id="@+id/r2"
        android:layout_below="@id/r1"
        android:background="@mipmap/bank_card_n"
        android:layout_height="160dp">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@mipmap/cemera"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@+id/iv_cemera2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击拍摄/上传身份证反面"
            android:textColor="#3087ea"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_cemera2"
            android:id="@+id/tv2"
            android:layout_marginTop="20dp"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="100dp"
        android:id="@+id/iv2"
        android:scaleType="centerCrop"
        android:layout_below="@id/r1"
        android:background="@mipmap/bank_card_n"
        android:visibility="gone"
        android:layout_height="160dp">
    </ImageView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="60dp"
        android:text="完成"
        android:textColor="#fff"
        android:textSize="14sp"
        android:id="@+id/next"
        android:background="@drawable/bt_bind"
        />

</RelativeLayout>